package inheritance;

public class CallingCard extends Card {
	private String cardNum;
	private String pin;
	
	CallingCard(String n, String card, String pinNum) {
		super(n);
		cardNum = card;
		pin = pinNum;
	}
	
	public String format() {
		return super.format() + ", Card Number: " + cardNum + ", PIN: " + pin;
	}
	
	public String toString()
    {
    	System.out.println("CallingCard" + super.toString() + "[number=" + cardNum + ",pin=" + pin + "]");
    	return super.toString() + "[number=" + cardNum + ",pin=" + pin + "]";
    }
	
	public String getNumber() {
		return cardNum;
	}
	
	public String getPIN() {
		return pin;
	}
}
