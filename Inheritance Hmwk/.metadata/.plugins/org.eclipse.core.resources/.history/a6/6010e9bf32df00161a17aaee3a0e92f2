package inheritance;
import java.util.*;

public class Billfold {
	ArrayList<Card> cards = new ArrayList<Card>();
	
	public Billfold() {
		this(2);
	}
	
	public Billfold(int cardAmount) {
		for (int i=0;i<cardAmount;i++) {
			cards.add(null);
		}
	}
	
	void addCard(Card card) {
		for (int i=0;i<cards.size();i++) {
			if (cards.get(i) == null) {
				cards.add(i, card);
				break;
			}
		}
	}

	String formatCards(Card card_obj) {
		String card_str;
		for (int i=0;i<cards.size();i++) {
			if (cards.get(i) != null) {
				card_str += card_obj.format();
			}
		}
	}
}
